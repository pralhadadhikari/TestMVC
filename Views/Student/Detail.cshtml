@model TestMVC.Models.Student


<form>
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" readonly>
        <span asp-validation-for="FullName"></span>
    </div>
    <div class="form-group">
        <label asp-for="RollNo"></label>
        <input asp-for="RollNo" class="form-control" readonly>
        <span asp-validation-for="RollNo"></span>
    </div>
    <div class="form-group">
        <label asp-for="Class"></label>
        <input asp-for="Class" class="form-control" readonly>
        <span asp-validation-for="Class"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter email" readonly>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly>
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="row">
        <div class="col-6">

            <a class="btn mt-2 btn-secondary" asp-action="Index">Back to List</a>

        </div>


    </div>
</form>